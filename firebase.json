{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "infra/**",
      "README.md",
      "Dockerfile",
      "*.md"
    ],
    "headers": [
      {
        "source": "**/*.json",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache" }
        ]
      }
    ]
  }
}
